{{#extend "style"}}
    <link href="{{STATIC}}/common/uploadheaderimg/cropper.min.css" rel="stylesheet">
    <link href="/common/uploadheaderimg/sitelogo.css" rel="stylesheet">
    <style>
        label.error {
            color: red;
        }

        .input-group {
            width: 300px;
        }

        .label-primary {
            position: relative;
            padding-right: 0;
            margin-right: 5px;
            margin-top: 5px;
        }

        .label-primary em {
            position: relative;
            top: 2px;
            display: inline-block;
            width: 21px;
            height: 21px;
            text-align: center;
            line-height: 21px;
            cursor: pointer;
            font-size: 18px;
        }

        .label-primary em:hover {
            color: #ffdc1e;
        }
    </style>
{{/extend}}

{{#extend "script"}}
    <script src="/common/uploadheaderimg/cropper.min.js"></script>
    <script src="/common/uploadheaderimg/siteimage.js"></script>
    <script src="/components/jquery-validation/dist/jquery.validate.min.js"></script>
    <script>
        $(function () {
            $("#postEdit").validate({
                rules: {
                    introduction: {
                        required: true,
                        minlength: 5
                    },
                    sign: {
                        required: true
                    }
                },
                messages: {
                    introduction: "至少5个字的简介",
                    required: "没有设置签名"
                },
                submitHandler: function (form) {
                    return true;
                }
            });

            var sign = [];
            Array.prototype.indexOf = function (val) {
                for (var i = 0; i < this.length; i++) {
                    if (this[i] == val) return i;
                }
                return -1;
            };

            Array.prototype.remove = function (val) {
                var index = this.indexOf(val);
                if (index > -1) {
                    this.splice(index, 1);
                }
            };

            $('#addSign').click(function () {
                var val = $(".form-control  option:selected").val();
                if (sign.indexOf(val) === -1) {
                    sign.push(val);
                    $('.bj').append('<span  class=" label label-primary" >' + val + '<em class="delsign" aria-hidden="true">&times;</em></span>')
                    setsign();
                }
            });

            $('.bj').on('click', '.delsign', function () {
                var parent = $(this).parent();
                parent.find('em').remove();
                var val = parent.html();
                parent.remove();
                sign.remove(val);
                setsign();
            })

            function setsign(){
                $('#sign').val(sign.join('.'));
            }
        })
    </script>
{{/extend}}
