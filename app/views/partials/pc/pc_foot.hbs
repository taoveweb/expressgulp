                    $('#login-dialog').css('display', 'none');
                })

                $('.login-btn').click(function () {
                    var parma = $('.login-form').serialize();
                    console.log(parma);

                })
            })
        </script>
      <script>
          //登录
          $(function () {
              $("#login-form").validate({
                  rules: {
                      account: {
                          required: true,
                          minlength: 5
                      },
                      password: {
                          required: true
                      }
                  },
                  messages: {
                      account: "格式不正确 请用 邮箱、手机、用户名 登录",
                      password: "密码"
                  },
                  submitHandler: function (form) {
                      return true;
                  }
              });

              var sign = [];
              Array.prototype.indexOf = function (val) {
                  for (var i = 0; i < this.length; i++) {
                      if (this[i] == val) return i;
                  }
                  return -1;
              };

              Array.prototype.remove = function (val) {
                  var index = this.indexOf(val);
                  if (index > -1) {
                      this.splice(index, 1);
                  }
              };

              $('#addSign').click(function () {
                  var val = $(".form-control  option:selected").val();
                  if (sign.indexOf(val) === -1) {
                      sign.push(val);
                      $('.bj').append('<span  class=" label label-primary" >' + val + '<em class="delsign" aria-hidden="true">&times;</em></span>')
                      setsign();
                  }
              });

              $('.bj').on('click', '.delsign', function () {
                  var parent = $(this).parent();
                  parent.find('em').remove();
                  var val = parent.html();
                  parent.remove();
                  sign.remove(val);
                  setsign();
              })

              function setsign(){
                  $('#sign').val(sign.join('.'));
              }
          })
      </script>
    {{/extend}}
