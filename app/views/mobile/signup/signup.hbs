{{#extend "script"}}
    <script src="/components/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/pc/js/layer.js"></script>
    <script>

        $(function () {
            //弹出登录框
            $('.login-trigger').click(function () {
                $('#login-dialog').css('display', 'block');
            })
            //关闭弹出框
            $('.dialog-close').click(function () {
                $('#login-dialog').css('display', 'none');
            })

        })
    </script>
    <script>
        //登录
        $(function () {
            jQuery.validator.addMethod("userName", function(value, element) {
                var username = /^[a-zA-Z\u4e00-\u9fa5]+$/;
                return this.optional(element) || (username.test(value));
            }, "输入长度必须介于 5 和 10 之间的字母或汉字");
            $("#regForm").validate({
                rules: {
                    user_name: {
                        required: true,
                        rangelength:[5,10],
                        userName:true
                    },
                    user_password: {
                        minlength: 6,
                        required: true
                    },
                    user_password2: {
                        minlength: 6,
                        required: true,
                        equalTo: "#user_password"
                    }
                },
                messages: {
                    user_name: "输入长度必须介于 5 和 10 之间的字母或汉字",
                    user_password: "密码长度至少6位",
                    user_password2:"两次密码输入不一致"
                },
                submitHandler: function (form) {
                    var params = $('form').serializeArray();
                    var data = {};
                    params.map(function (val, i) {
                        data[val.name] = val.value;
                    });
                    data.type="register";
                    $.post('{{host}}/rest/accounts/register',data,function(data){
                        if(data.success){
                            //正上方
                            layer.msg('注册成功请登录', {
                                offset: 0,
                                shift: 6
                            });

                            $('.login-trigger').trigger('click')
                        }else{
                            layer.msg(data.msg, {
                                offset: 0,
                                shift: 6
                            });
                        }

                    });
                    /*$(form).ajaxSubmit();*/
                    return true;

                },


            });

        })
    </script>
{{/extend}}

