<div class="container container-default">
    <main role="main" class="col-main col-xs-12">
        <section class="card inner">
            <form class="form-horizontal" method="patch" style="margin:10px 0" action="/rest/users/self/preferences" onsubmit="$(this).ajaxsubmit();return false;">
                <input type="hidden" name="nonce" value="09f5b1782ead0392">
