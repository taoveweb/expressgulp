{{#eq user null}}
    <div class="dialog-wrapper">
        <div class="dialog" id="popLogin" style="width:380px">
            <form class="form-horizontal" action="/rest/accounts/login" method="post"
                  onsubmit="$(this).ajaxsubmit(local.redirectInDialog);return false;"><h2>登录</h2>
                <div class="dialog-body" style="padding-bottom:30px">
                    <div class="form-group"><label class="col-xs-2 control-label" for="popLoginAccount">账号</label>
                        <div class="col-xs-10"><input type="text" class="form-control" name="account"
                                                      id="popLoginAccount" autofocus="" required=""
                                                      placeholder="邮箱、手机、用户名"></div>
                    </div>
                    <div class="form-group"><label class="col-xs-2 control-label" for="popLoginPassword">密码</label>
                        <div class="col-xs-10"><input type="password" class="form-control" name="password"
                                                      id="popLoginPassword" required=""></div>
                    </div>
                    <div class="form-group form-captcha"></div>
                    <p class="dialog-line"><label for="loginRemember" class="checkbox-inline"> <input type="checkbox"
                                                                                                      name="remember"
                                                                                                      id="loginRemember"
                                                                                                      checked="checked">
                        下次自动登录 </label> <a style="margin-left:50px" class="forget-password"
                                           href="https://tuchong.com/account/forget/" target="_blank">忘记密码</a>
                        <button style="margin-left:10px" class="btn btn-sm btn-primary" type="submit">登录</button>
                    </p>
                    <p class="connect"><span>无需注册，用社交帐号登录：</span> <a href="https://tuchong.com/weibo/auth/"
                                                                     class="ir weibo-small">用微博登录</a> <a
                            href="https://tuchong.com/weixin/auth/" class="ir weixin-small">用微信登录</a> <a
                            href="https://tuchong.com/qq/auth/" class="ir qq-small">用QQ登录</a></p></div>
            </form>
            <a class="x-delete" href="javascript:void(0)">关闭</a></div>
    </div>
    {{#extend "script"}}
        <script src="/components/jquery-validation/dist/jquery.validate.min.js"></script>
        <script>
            $(function () {
                //弹出登录框
                $('.login-trigger').click(function () {
                    $('#login-dialog').css('display', 'block');
                })
                //关闭弹出框
                $('.dialog-close').click(function () {
                    $('#login-dialog').css('display', 'none');
                })

            })
        </script>
        <script>
            //登录
            $(function () {
                $("#login-form").validate({
                    rules: {
                        account: {
                            required: true,
                            minlength: 5
                        },
                        password: {
                            minlength: 5,
                            required: true
                        }
                    },
                    messages: {
                        account: "格式不正确 请用 邮箱、手机、用户名 登录",
                        password: "密码不能为空"
                    },
                    submitHandler: function (form) {
                        var params = $('form').serializeArray();
                        var data = {};
                        params.map(function (val, i) {
                            data[val.name] = val.value;
                        });
                        data.type = "poplogin";
                        $.post('{{host}}/admin/login', data, function (data) {
                            if (data.success) {
                                location.reload()
                            } else {
                                console.log(data)
                            }

                        });
                        return true;

                    },


                });

            })
        </script>
    {{/extend}}

    <style>
        .login-form .login-group label.error {
            width: 100%;
            position: absolute;
            bottom: 102px;
            left: 10px;
            right: 10px;
            text-align: center;
            font-weight: normal;
            color: #ff6600;
        }
    </style>

